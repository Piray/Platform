{% extends "generic/layout.html.twig" %}

{% block title %} {{ page_header.title }} {% endblock %}

{% block main %}
{% include 'generic/page_header.html.twig' %}
{% if login_msg %}
<p class="text-danger text-center">{{ login_msg }}</p>
{% endif %}
<div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <form class="form-horizontal" action="login" method="post">
        <div class="form-group">
            <label class="col-md-3 col-sm-4 control-label" for="login_username">User Name</label>
            <div class="col-md-9 col-sm-8">
                <input id="login_username" name="username" type="text" placeholder="your name" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 col-sm-4 control-label" for="login_password">Password</label>
            <div class="col-md-9 col-sm-8">
                <input id="login_password" name="password" type="password" placeholder="your password" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-9 col-md-offset-3 col-sm-8 col-sm-offset-4">
                <button type="submit" class="btn btn-primary">Sign In</button>
            </div>
        </div>
    </form>
    </div>
</div>
{% endblock %}
